{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }